<Window x:Class="BlinkingGarlandApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Динамические объекты" Height="450" Width="800"
        MouseDown="Window_MouseDown">
    <Grid>
        <Canvas x:Name="MainCanvas" Background="White"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="Вверх" Click="MoveUp_Click" Margin="5" Width="60"/>
            <Button Content="Влево" Click="MoveLeft_Click" Margin="5" Width="60"/>
            <Button Content="Вправо" Click="MoveRight_Click" Margin="5" Width="60"/>
            <Button Content="Вниз" Click="MoveDown_Click" Margin="5" Width="60"/>
        </StackPanel>
    </Grid>
</Window>