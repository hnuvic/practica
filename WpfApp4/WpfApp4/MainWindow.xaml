<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин:" />
            <TextBox x:Name="LoginTextBox" Width="200" />
            <Label Content="Пароль:" />
            <PasswordBox x:Name="PasswordBox" Width="200" />
            <Button Content="Войти" Click="LoginButton_Click" Margin="0,10" Padding="10,5" />
            <TextBlock x:Name="ErrorLabel" Foreground="Red" TextWrapping="Wrap" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>